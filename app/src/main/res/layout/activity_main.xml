<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:inputType="number"
            android:text="0"
            android:gravity="right"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btn_ce"
                android:layout_width="@dimen/number_btn"
                android:layout_height="@dimen/number_btn_height"
                android:gravity="center"
                android:text="CE" />

            <Button
                android:id="@+id/c"
                android:layout_width="@dimen/number_btn"
                android:layout_height="@dimen/number_btn_height"
                android:text="C" />

            <Button
                android:id="@+id/btn_backspace"
                android:layout_width="@dimen/number_btn"
                android:layout_height="@dimen/number_btn_height"
                android:text="<" />

            <Button
                android:id="@+id/btn_div"
                android:layout_width="@dimen/number_btn"
                android:layout_height="@dimen/number_btn_height"
                android:text="/" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_7"
                android:layout_width="@dimen/number_btn"
                android:layout_height="@dimen/number_btn_height"
                android:gravity="center"
                android:text="7" />

            <Button
                android:id="@+id/btn_8"
                android:layout_width="@dimen/number_btn"
                android:layout_height="@dimen/number_btn_height"
                android:text="8" />

            <Button
                android:id="@+id/btn_9"
                android:layout_width="@dimen/number_btn"
                android:layout_height="@dimen/number_btn_height"
                android:text="9" />

            <Button
                android:id="@+id/btn_mul"
                android:layout_width="@dimen/number_btn"
                android:layout_height="@dimen/number_btn_height"
                android:text="*" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_4"
                android:layout_width="@dimen/number_btn"
                android:layout_height="@dimen/number_btn_height"
                android:gravity="center"
                android:text="4" />

            <Button
                android:id="@+id/btn_5"
                android:layout_width="@dimen/number_btn"
                android:layout_height="@dimen/number_btn_height"
                android:text="5" />

            <Button
                android:id="@+id/btn_6"
                android:layout_width="@dimen/number_btn"
                android:layout_height="@dimen/number_btn_height"
                android:text="6" />

            <Button
                android:id="@+id/btn_minus"
                android:layout_width="@dimen/number_btn"
                android:layout_height="@dimen/number_btn_height"
                android:text="-" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_1"
                android:layout_width="@dimen/number_btn"
                android:layout_height="@dimen/number_btn_height"
                android:gravity="center"
                android:text="@string/btn_1" />

            <Button
                android:id="@+id/btn_2"
                android:layout_width="@dimen/number_btn"
                android:layout_height="@dimen/number_btn_height"
                android:text="2" />

            <Button
                android:id="@+id/btn_3"
                android:layout_width="@dimen/number_btn"
                android:layout_height="@dimen/number_btn_height"
                android:text="3" />

            <Button
                android:id="@+id/btn_plus"
                android:layout_width="@dimen/number_btn"
                android:layout_height="@dimen/number_btn_height"
                android:text="+" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_plus_minus"
                android:layout_width="@dimen/number_btn"
                android:layout_height="@dimen/number_btn_height"
                android:gravity="center"
                android:text="+/-" />

            <Button
                android:id="@+id/btn_0"
                android:layout_width="@dimen/number_btn"
                android:layout_height="@dimen/number_btn_height"
                android:text="0" />

            <Button
                android:id="@+id/btn_dot"
                android:layout_width="@dimen/number_btn"
                android:layout_height="@dimen/number_btn_height"
                android:text="." />

            <Button
                android:id="@+id/btn_equal"
                android:layout_width="@dimen/number_btn"
                android:layout_height="@dimen/number_btn_height"
                android:text="=" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>